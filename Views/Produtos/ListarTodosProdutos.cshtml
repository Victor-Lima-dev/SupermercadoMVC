@model IEnumerable<supermercadoMVC.Models.Produto>

<div class="container-fluid">
	<div class="row">
		<h1>@ViewBag.CategoriaEscolhida</h1>
    @{
        foreach (var produto in Model)
        {         
		<div class="col-md-4">
			<div class="card">
				<h5 class="card-header">
					@produto.Nome
				</h5>
				<div class="card-body">
					<p class="card-text">
						@produto.Categoria
					</p>
					<p class="card-text">
						@produto.Descricao
					</p>
				</div>
				<div class="row">
                    <div class="card-footer col-md-6">
                        <p>Quantidade Estoque @produto.Quantidade</p>
                    </div>
                    <div class="card-footer col-md-6">
                       <P> Pre√ßo @produto.Preco</P> 
                    </div>
                </div>
			</div>
		</div>
        }
    }
	</div>
</div>

